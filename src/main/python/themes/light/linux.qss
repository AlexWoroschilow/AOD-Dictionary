QMainWindow { background: #ffffff; }

QTabBar { background: rgb(236,236,236); color: #4f4f4f; font-size: 16px; }
QTabWidget { background: #ffffff; border: none; margin: 0px; }
QTabWidget::pane { background: #ffffff; border: none; margin: 0px; border-left: 1px solid #eeeeee; }
QTabWidget::tab-bar { left: 0px; color: #4f4f4f; }
QTabBar::tab { background: #ffffff; color: #4d5357; border-right: 2px solid #ffffff; padding: 5px; }
QTabBar::tab:selected { background: #ffffff; border-right: 2px solid #4d5357; }
QTabBar::tab:!selected { background: #ffffff; }
QTabBar::close-button { image: url(icons/close); }

QListView { background: #ffffff; border: none; font-size: 16px; }
QListView::item { border-bottom: 1px dotted #e4e4e4; color: #2ca7f8; padding: 3px 10px; }
QListView::item:hover { alternate-background-color: #f9f9f9; border-bottom: 1px solid #f9f9f9; background: #f9f9f9; }
QListView::item:selected:active { border-bottom: 1px solid #f9f9f9; background: #f9f9f9; }
QListView::item:hover:selected { border-bottom: 1px solid #e4e4e4; background: #e4e4e4; }
QListView::item:selected { border-bottom: 1px solid #f9f9f9; background: #f9f9f9; }

QSplitter { background: #f9f9f9; border: none; }
QSplitter::handle { image: url(icons/splitter-light); }
QSplitter::handle:vertical { height: 5px; }

QHeaderView::section { background:#ffffff; }

TranslatorWidget TranslatorContainerDescription { background-color: #f9f9f9; }
TranslatorWidget TranslatorContainerDescription PictureButtonDisabled { margin: 15px 5px 5px 5px; }
TranslatorWidget TranslatorContainerDescription PictureButtonFlat { margin: 15px 5px 5px 5px; }
TranslatorWidget TranslatorContainerDescription SearchField { margin: 10px 0px 5px 0px; font-size: 16px;  padding: 5px; border: 1px solid #e4e4e4; }
TranslatorWidget TranslatorContainerDescription TranslationWidget {	background: #fff; border-top: 1px solid #f9f9f9;  margin: 10px; padding: 5px 15px; }

QDialog { background: #ffffff; border: 0px; }
QDialog QTextEdit {	background: #fff; border: 1px solid #e4e4e4; margin: 0px; padding: 5px 15px; }

StatisticWidget StatisticCalendar { background-color: #ffffff; selection-color: #000; }
StatisticWidget StatisticCalendar QAbstractItemView { background-color: #ffffff; padding: 0px; }
StatisticWidget StatisticCalendar QWidget { alternate-background-color: #f9f9f9; }
StatisticWidget StatisticCalendar QMenu { font-size: 16px; color: #4f4f4f; background-color: #f9f9f9; border: 1px solid #c0c0c0; font-size: 21px; }
StatisticWidget StatisticCalendar QWidget#qt_calendar_navigationbar { background-color: #ffffff; }
StatisticWidget StatisticCalendar QToolButton { background-color: #ffffff; color: #4f4f4f; font-size: 26px; min-width: 30px; padding: 0px 10px; }
StatisticWidget StatisticCalendar QToolButton::menu-indicator { height: 30px; width: 15px; }
StatisticWidget StatisticCalendar QSpinBox { font-size: 26px; }
StatisticWidget StatisticCalendar QIcon { display: none; }

HistoryWidget { background: #ffffff; }
HistoryWidget HistoryToolbar { background: #ffffff; padding: 5px 5px 0px 5px; }
HistoryWidget HistoryTable { background: #ffffff; border: none; }
HistoryWidget HistoryTable::item:selected { background-color: #2ca7f8; }
HistoryWidget HistoryTable QTableCornerButton::section { background: #2ca7f8; }
HistoryWidget HistoryTable QHeaderView::section { background-color: #f9f9f9; border: 1px solid #f9f9f9; padding: 5px 8px;  }
HistoryWidget HistoryTable QHeaderView::section:checked { background-color: #2ca7f8; color: #ffffff; }

SettingsScrollArea { background: #ffffff; }

SettingsWidget { background: #FFFFFF; padding: 0px; margin: 0px;}
SettingsWidget PictureButtonFlat { padding: 0px; margin: 0px; text-align: left; }

SettingsWidget SettingsScrollArea { background: #FFFFFF; }
SettingsWidget SettingsTitle { text-align: center; font-size: 18px; padding: 5px 0px; }

QMenu { background-color: #ffffff; border: 1px solid #d0d0d0; }
QMenu::item { padding: 5px 25px 5px 30px; border: 1px solid transparent; color: #4a4a4a; }
QMenu::icon { padding: 0px 5px 0px 5px; }
QMenu::item:selected { border-color: #e4e4e4; background: #e4e4e4; }
QMenu::icon:checked { background: #ffffff; border: 1px inset #ffffff; position: absolute; top: 1px; right: 1px; bottom: 1px; left: 1px; }
